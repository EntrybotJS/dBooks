<div class="container-fluid container-dashboard">
    <div class="row dash-container">
        <main class="col-12">
            <div class="dash-text clearfix">
                <h1>Biblioth√®que</h1>
                <i class="material-icons" onclick="SidenavToggle()">menu</i>
            </div>
            <div id="dash-controls" class="dash-controls">
                <div class="action-form">
                    <a href="javascript:void(0)" class="material-icons" onclick="Add()">add</a>
                    <div id="addForm">
                        <form class="clearfix" method="GET">
                            <label class="sr-only" for="searchForm">Ajouter un livre:</label>
                            <input type="text" name="add" id="add">
                            <button type="submit" class="material-icons font-smoothing">done</button>
                        </form>
                    </div>
                </div>
                <div class="action-form">
                    <a href="javascript:void(0)" class="material-icons" onclick="Delete()">delete</a>
                    <div id="deleteForm">
                        <form class="clearfix" method="GET">
                            <label class="sr-only" for="searchForm">Supprimer un livre:</label>
                            <input type="text" name="delete" id="delete">
                            <button type="submit" class="material-icons font-smoothing">done</button>
                        </form>
                    </div>
                </div>
                <div class="action-form">
                    <a href="javascript:void(0)" class="material-icons" onclick="Edit()">edit</a>
                    <div id="editForm">
                        <form class="clearfix" method="GET">
                            <label class="sr-only" for="searchForm">Modifier un livre:</label>
                            <input type="text" name="edit" id="edit">
                            <button type="submit" class="material-icons font-smoothing">done</button>
                        </form>
                    </div>
                </div>
            </div>
            <section class="row container-fluid livres">
                {{#each book}}
                    <div class="col-6 col-sm-3 col-lg-2 col-xl-1 livre">
                        <div class="livre-info .font-smoothing">
                            <h4>{{title}}</h4>
                            <p>{{author}}</p>
                            <a >plus</a>
                        </div>
                        <img src="{{url}}" class="img-fluid" alt="No Cover">
                    </div>
                {{/each}}
            </section>
        </main>
    </div>
</div>